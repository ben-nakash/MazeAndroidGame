<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context="com.example.ben.mazegame.LevelSelectionActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="@string/btn_level_one"
            android:id="@+id/btn_level_one"
            android:layout_gravity="center"
            android:textSize="50px"
            android:layout_marginTop="50dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="@string/btn_level_two"
            android:id="@+id/btn_level_two"
            android:layout_gravity="center"
            android:textSize="50px"
            android:layout_marginTop="40px" />

        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="@string/btn_level_three"
            android:id="@+id/btn_level_three"
            android:layout_gravity="center"
            android:textSize="50px"
            android:layout_marginTop="40px" />
    </LinearLayout>
</RelativeLayout>
